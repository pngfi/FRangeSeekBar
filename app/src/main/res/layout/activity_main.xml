<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.pngfi.seekbar.MainActivity">
    <com.pngfi.seekbar.RangeSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cellMode="number"
        app:cells="200"
        app:reserve="100"
        app:lineColorEdge="#E9E9E9"
        app:lineColorSelected="@color/colorAccent"
        app:max="20000"
        app:min="0"
        app:thumbSize="17dp"
        app:hintBGHeight="0dp"
        app:progressHintMode="alwaysHide"
        app:seekBarHeight="6dp"
        app:seekBarMode="range"
        app:thumbResId="@drawable/ic_seekbar_thumb"
        />
    <com.pngfi.seekbar.SeekBar
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.pngfi.seekbar.SeekBar>

</LinearLayout>
