<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pngfi.demo.MainActivity">


    <com.pngfi.rangeseekbar.RangeSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:gap="1"
        app:max="1"
        app:min="0"
        app:progressBackground="#E9E9E9"
        app:progressBackgroundHeight="1dp"
        app:progressColor="@color/colorAccent"
        app:progressHeight="5dp"
        app:seekToTouch="true"
        app:shadowColor="#19000000"
        app:shadowOffsetX="0dp"
        app:shadowOffsetY="2dp"
        app:shadowRadius="5dp"
        app:stepCount="5" />


    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btr_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该边" />

    <com.pngfi.rangeseekbar.RangeSeekBar
        android:id="@+id/rsb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:gap="1"
        app:max="1"
        app:min="0"
        app:progressBackground="#E9E9E9"
        app:progressBackgroundHeight="5dp"
        app:progressColor="#F38D39"
        app:progressHeight="5dp"
        app:seekToTouch="true"
        app:shadowColor="#19000000"
        app:shadowOffsetX="0dp"
        app:shadowOffsetY="2dp"
        app:shadowRadius="5dp"
        app:stepCount="100"
        app:thumb="@drawable/ic_thumb" />

    <com.pngfi.rangeseekbar.RangeSeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:gap="0"
        app:max="100"
        app:min="0"
        app:progressBackground="#E9E9E9"
        app:progressBackgroundHeight="1dp"
        app:progressColor="@color/colorAccent"
        app:progressHeight="5dp"
        app:seekToTouch="true"
        app:shadowColor="#48FF4081"
        app:shadowOffsetX="0dp"
        app:shadowOffsetY="2dp"
        app:shadowRadius="5dp"
        app:stepCount="20" />


</LinearLayout>
